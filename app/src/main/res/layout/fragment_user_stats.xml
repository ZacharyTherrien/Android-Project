<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/username_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:shadowColor="#FFFFFF"
        android:text="User's Stats"
        android:textColor="#3F51B5"
        android:textColorHighlight="#FFFFFF"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/taskChart_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Task Chart"
        android:textSize="36sp" />

    <com.anychart.AnyChartView
        android:id="@+id/any_chart_view"
        android:layout_width="wrap_content"
        android:layout_height="300dp" />

    <TextView
        android:id="@+id/topTasks_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Top 5 Tasks"
        android:textSize="36sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/topTasks_recylerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/user_back_fbtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/abc_vector_test"
            android:tint="#FFFFFF"></com.google.android.material.floatingactionbutton.FloatingActionButton>

        <TextView
            android:id="@+id/totalTime_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:paddingRight="50dp"
            android:text="Total Time"
            android:textColor="#4CAF50"
            android:textSize="30sp" />

    </LinearLayout>

</LinearLayout>